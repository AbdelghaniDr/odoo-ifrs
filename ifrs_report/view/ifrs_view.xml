<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data noupdate="0">

		<!-- VISTAS -->

		<record model="ir.ui.view" id="view_ifrs_ifrs_tree">
		  <field name="name">ifrs.ifrs.tree</field>
		  <field name="model">ifrs.ifrs</field>
		  <field name="type">tree</field>
		  <field name="arch" type="xml">
			<tree string="International Financial Reporting Standards">
			  <field name="name" />
			  <field name="company_id" />
			  <field name="title" />
			  <field name="fiscal_year" />
			  <field name="state" />
			</tree>
		  </field>
		</record>

		<record model="ir.ui.view" id="view_ifrs_ifrs_form">
		  <field name="name">ifrs.ifrs.form</field>
		  <field name="model">ifrs.ifrs</field>
		  <field name="type">form</field>
		  <field name="arch" type="xml">
			<form string="International Financial Reporting Standards">
			<field name="name" />
			  <field name="company_id" />
			  <field name="title" />
			  <field name="fiscal_year" />

			  <field name="ifrs_lines_ids" nolabel="1" colspan="4" mode="tree,form" >
				<tree string="IFRS Lines">
				  <field name="sequence" />
				  <field name="name" />
				  <field name="type" />
				  <field name="cons_ids" />
				  <field name="total_ids" />
				  <field name="amount" />
				</tree>
				<form string="IFRS Lines">
				  <field name="sequence" />
				  <field name="name" />
				  <field name="type" />
				  <field name="amount" />
				  <group colspan='6'>
					  <group
						colspan='6'
						attrs="{'invisible':[('type','in',('abstract','total'))]}">
						<separator string='Consolidated Accounts' colspan='6' />
						<field name="cons_ids" nolabel='1'/>
					  </group>
					  <group colspan='6'
						attrs="{'invisible':[('type','in',('abstract','detail'))]}">
						<separator string='Total' colspan='6' />
						<field
							name="total_ids"
							nolabel='1'
							domain="[('ifrs_id','=',parent.id),('type','!=','abstract'),('id','!=',id)]" />
					  </group>
				  </group>

				</form>
			  </field>

			  <field name="state" />
			</form>
		  </field>
		</record>

		<!-- ACCIONES -->

		<record model="ir.actions.act_window" id="action_ifrs_ifrs_form">
		  <field name="name">IFRS</field>
		  <field name="res_model">ifrs.ifrs</field>
		  <field name="view_type">form</field>
		  <field name="view_mode">tree,form</field>
		</record>

		<!-- MENUS -->

		<menuitem
			id="menu_ifrs_ifrs"
			name="IFRS"
		/>

		<!-- SUB-MENU -->

		<menuitem
			id="sub_menu_ifrs_ifrs"
			name="IFRS"
			parent="menu_ifrs_ifrs"
			action="action_ifrs_ifrs_form"
		/>

	</data>
</openerp>
