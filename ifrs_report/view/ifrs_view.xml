<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data noupdate="0">

		<!-- VISTAS -->

<!--
HACER
	Toca hacer que cuando sea de tipo detail solo muestra la pestaña consolided accounts,
	cuando es tipo Total, solo muestra total,
	y cuando es abstract, no muestra ninguna pestaña, no se relaciona con ninguna cuenta, es solo un titulo
-->

		<record model="ir.ui.view" id="view_ifrs_ifrs_tree">
		  <field name="name">ifrs.ifrs.tree</field>
		  <field name="model">ifrs.ifrs</field>
		  <field name="type">tree</field>
		  <field name="arch" type="xml">
			<tree string="International Financial Reporting Standards">
			  <field name="name" />
			  <field name="company_id" />
			  <field name="title" />
			  <field name="fiscal_year" />
			  <field name="state" />
			</tree>
		  </field>
		</record>

		<record model="ir.ui.view" id="view_ifrs_ifrs_form">
		  <field name="name">ifrs.ifrs.form</field>
		  <field name="model">ifrs.ifrs</field>
		  <field name="type">form</field>
		  <field name="arch" type="xml">
			<form string="International Financial Reporting Standards">
			<field name="name" />
			  <field name="company_id" />
			  <field name="title" />
			  <field name="fiscal_year" />

			  <field name="ifrs_lines_ids" nolabel="1" colspan="4" mode="tree,form" >
				<tree string="IFRS Lines">
				  <field name="sequence" />
				  <field name="name" />
				  <field name="type" />
				  <field name="cons_ids" />
				  <field name="total_ids" />
				  <field name="amount" />
				</tree>
				<form string="IFRS Lines">
				  <field name="sequence" />
				  <field name="name" />
				  <field name="type" />
				  <field name="amount" />
				  <notebook colspan='6'>
					<page string='Consolidated Accounts'>
						<field name="cons_ids" nolabel='1'/>
					</page>
				  </notebook>
				  <notebook colspan='6'>
					<page string='Total'>
						<field name="total_ids" nolabel='1'/>
					</page>
				  </notebook>

				</form>
			  </field>



			  <field name="state" />
			</form>
		  </field>
		</record>

		<!-- ACCIONES -->

		<record model="ir.actions.act_window" id="action_ifrs_ifrs_form">
		  <field name="name">IFRS</field>
		  <field name="res_model">ifrs.ifrs</field>
		  <field name="view_type">form</field>
		  <field name="view_mode">tree,form</field>
		</record>

		<!-- MENUS -->

		<menuitem
			id="menu_ifrs_ifrs"
			name="IFRS"
		/>

		<!-- SUB-MENU -->

		<menuitem
			id="sub_menu_ifrs_ifrs"
			name="IFRS"
			parent="menu_ifrs_ifrs"
			action="action_ifrs_ifrs_form"
		/>

	</data>
</openerp>
